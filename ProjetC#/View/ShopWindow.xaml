<Window x:Class="Game.View.ShopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="750" Width="1250"
        ResizeMode="NoResize" Closing="MainWindow_Closing">
    
    <Grid>
        <Image Source="/photos/market.gif" Stretch="UniformToFill" Opacity="0.7" />
        <Button Content="RETOUR" HorizontalAlignment="Left" Margin="40,36,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.581,-0.389" Click="HomeButton_Click" Height="44" Width="113"/>

        <TextBlock HorizontalAlignment="Left" FontSize="40" FontFamily="Meiryo" Foreground="White" FontWeight="DemiBold"
               x:Name="MoneyPlayer" Margin="441,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="426">
             <Run Text="ARGENT: " />
             <Run Text="{Binding Player.MoneyController.Money}" />
             <Run Text="$" />
        </TextBlock>

        <Button Margin="151,0,929,0" VerticalAlignment="Center" RenderTransformOrigin="0.581,-0.389" Click="BuyAttackButton_Click" Tag="{Binding Shop.AttacksOnSale[0].AttackName}" Height="48">
            <StackPanel>
                <TextBlock> 
             <Run Text="{Binding Shop.AttacksOnSale[0].AttackName}" />
                </TextBlock>
                <TextBlock> 
             <Run Text=" 1000$"/>
                </TextBlock>
            </StackPanel>
        </Button>
        <Button Margin="394,0,686,0" VerticalAlignment="Center" RenderTransformOrigin="0.581,-0.389" Click="BuyAttackButton_Click" Tag="{Binding Shop.AttacksOnSale[1].AttackName}" Height="48">
            <StackPanel>
                <TextBlock> 
                    <Run Text="{Binding Shop.AttacksOnSale[1].AttackName}" />
                </TextBlock>
                <TextBlock> 
                    <Run Text=" 1000$"/>
                </TextBlock>
            </StackPanel>
        </Button>
        <Button Margin="652,0,428,0" VerticalAlignment="Center" RenderTransformOrigin="0.581,-0.389" Click="BuyAttackButton_Click" Tag="{Binding Shop.AttacksOnSale[2].AttackName}" Height="48">
            <StackPanel>
                <TextBlock> 
        <Run Text="{Binding Shop.AttacksOnSale[2].AttackName}" />
                </TextBlock>
                <TextBlock> 
        <Run Text=" 1000$"/>
                </TextBlock>
            </StackPanel>
        </Button>
       

        <Button HorizontalAlignment="Left" Margin="912,267,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.581,-0.389" Click="BuyTotemButton_Click">
            <StackPanel>
                <TextBlock Width="49">
                    <Run Text="POCHITA" />
                </TextBlock>
                <TextBlock Width="158">
                    <Run Text="Augmente les dégâts de 15%" />
                </TextBlock>
                <Image Source="/photos/pochita.png" Height="72" Width="166"/>
                <TextBlock Width="34">
                    <Run Text="5000$"/>
                </TextBlock>
            </StackPanel>
        </Button>


        <Grid x:Name="InputBox" Visibility="Collapsed" >
            <Grid Background="Black" Opacity="0.5"/>
            <Border
                MinWidth="250"
                Background="NavajoWhite" 
                BorderBrush="Black" 
                BorderThickness="1" 
                CornerRadius="0,55,0,55" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
                <StackPanel Width="214" x:Name="listChoice">
                    <TextBlock Margin="5" Text="Choisir un sort à remplacer:" FontWeight="Bold" FontFamily="Cambria" />
                    <RadioButton Content="{Binding Player.AttackEquipped[0].AttackName}"/>
                    <RadioButton Content="{Binding Player.AttackEquipped[1].AttackName}"/>
                    <RadioButton Content="{Binding Player.AttackEquipped[2].AttackName}"/>
                    <RadioButton Content="{Binding Player.AttackEquipped[3].AttackName}"/>
                    <Button x:Name="YesButton" Margin="5" Content="Remplacer" Background="{x:Null}" Click="YesButton_Click" Width="69"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
