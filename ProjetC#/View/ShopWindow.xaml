<Window x:Class="Game.View.ShopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="450" Width="800">
    <Grid>

        <Image Source="/photos/market.gif" Stretch="UniformToFill" Opacity="0.7" />

        <TextBlock HorizontalAlignment="Center" Margin="0,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.7,-1.644"><Run Language="fr-fr" Text="Shop"/></TextBlock>
        <Button Content="Home" HorizontalAlignment="Left" Margin="40,36,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.581,-0.389" Click="HomeButton_Click"/>

        <Button HorizontalAlignment="Left" Margin="300,349,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.581,-0.389" Click="BuySpellButton_Click" Tag="{Binding Shop.SpellOnSale[0].SpellName}">
            <TextBlock>
                <Run Text="{Binding Shop.SpellOnSale[0].SpellName}" />
                <Run Text=" Acheter"/>
            </TextBlock>
        </Button>

        <TextBlock HorizontalAlignment="Left" Margin="21,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
             <Run Text="Money: " />
             <Run Text="{Binding Player.MoneyController.Money}" />
             <Run Text="$" />
        </TextBlock>

        <Button HorizontalAlignment="Left" Margin="300,300,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.581,-0.389" Click="BuySpellButton_Click" Tag="{Binding Shop.SpellOnSale[1].SpellName}">
            <TextBlock>
        <Run Text="{Binding Shop.SpellOnSale[1].SpellName}" />
        <Run Text=" Acheter"/>
            </TextBlock>
        </Button>

        <Grid x:Name="InputBox" >
            <Grid Background="Black" Opacity="0.5"/>
            <Border
                MinWidth="250"
                Background="NavajoWhite" 
                BorderBrush="Black" 
                BorderThickness="1" 
                CornerRadius="0,55,0,55" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
                <StackPanel Width="214">
                    <TextBlock Margin="5" Text="Choisir un sort à remplacer:" FontWeight="Bold" FontFamily="Cambria" />
                    <RadioButton Content="{Binding Player.SpellsEquipped[0].SpellName}"></RadioButton>
                    <RadioButton Content="{Binding Player.SpellsEquipped[1].SpellName}"></RadioButton>
                    <RadioButton Content="{Binding Player.SpellsEquipped[2].SpellName}"></RadioButton>
                    <RadioButton Content="{Binding Player.SpellsEquipped[3].SpellName}"></RadioButton>
                    <Button x:Name="YesButton" Margin="5" Content="Remplacer" Background="{x:Null}" Click="YesButton_Click" Width="69"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
